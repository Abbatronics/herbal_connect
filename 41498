<script>
  // Toggle between cart and checkout pages
  const cartPage = document.getElementById('cart-page');
  const checkoutPage = document.getElementById('checkout-page');
  const proceedBtn = document.getElementById('proceed-to-checkout');
  const returnBtn = document.getElementById('return-to-cart');
  
  proceedBtn.addEventListener('click', (e) => {
    e.preventDefault();
    cartPage.classList.add('section-hidden');
    checkoutPage.classList.remove('section-hidden');
    window.scrollTo(0, 0);
  });
  
  returnBtn.addEventListener('click', (e) => {
    e.preventDefault();
    checkoutPage.classList.add('section-hidden');
    cartPage.classList.remove('section-hidden');
    window.scrollTo(0, 0);
  });
  
  // Quantity adjustment functionality
  document.querySelectorAll('.quantity-btn.minus').forEach(btn => {
    btn.addEventListener('click', function() {
      const input = this.nextElementSibling;
      if (input.value > 1) {
        input.value--;
      }
    });
  });
  
  document.querySelectorAll('.quantity-btn.plus').forEach(btn => {
    btn.addEventListener('click', function() {
      const input = this.previousElementSibling;
      input.value++;
    });
  });
  
  // Remove item functionality
  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      this.closest('.cart-item').remove();
      // In a real app, you would update cart totals here
    });
  });
  
  // Payment method selection
  document.querySelectorAll('.payment-method').forEach(method => {
    method.addEventListener('click', function() {
      document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
      this.classList.add('selected');
      this.querySelector('input').checked = true;
    });
  });
  
  // Same as shipping address toggle
  document.getElementById('same-as-shipping').addEventListener('change', function() {
    const billingFields = document.getElementById('billing-address-fields');
    if (this.checked) {
      billingFields.style.display = 'none';
    } else {
      billingFields.style.display = 'block';
    }
  });
</script>

</body>
