  <script>
    function addToCart() {
      alert('Product added to cart!');
      // Later: Use AJAX to post to Django/React backend
    }

    function submitReview(event) {
      event.preventDefault();
      const name = document.getElementById('reviewerName').value;
      const text = document.getElementById('reviewText').value;
      const reviewContainer = document.getElementById('newReviews');

      const reviewHTML = `<div class="review"><strong>${name}</strong> — "${text}"</div>`;
      reviewContainer.insertAdjacentHTML('beforeend', reviewHTML);

      // Reset form
      event.target.reset();
    }
  </script>

